<templateSet group="Purescript">
    <template
        name="instance"
        value="instance $INSTANCE$ :: $CLASS$ $SUBJECT$ where&#10;    $MEMBER$ = $BODY$"
        description="simple instance declaration with automatic name"
        toReformat="false"
        toShortenFQNames="false"
    >
        <variable
            name="CLASS"
            expression="complete()"
            defaultValue='"Show"'
            alwaysStopAt="true"
        />
        <variable
            name="SUBJECT"
            expression="complete()"
            defaultValue='"_"'
            alwaysStopAt="true"
        />
        <variable
            name="INSTANCE"
            expression="concat(decapitalize(CLASS), SUBJECT)"
            defaultValue='"_"'
            alwaysStopAt="false"
        />
        <variable
            name="MEMBER"
            expression=""
            defaultValue='"_"'
            alwaysStopAt="true"
        />
        <variable
            name="BODY"
            expression=""
            defaultValue='"?"'
            alwaysStopAt="true"
        />
        <context>
            <option name="PURESCRIPT" value="true"/>
        </context>
    </template>
</templateSet>